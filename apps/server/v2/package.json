{
  "name": "pixelarium",
  "description": "The Infinite Pixels Experience.",
  "module": "main.ts",
  "type": "module",
  "scripts": {
    "start": "bun run src/main.ts",
    "dev": "env-cmd -f .env.dev bun run --watch src/main.ts",
    "staging": "env-cmd -f .env.staging bun run --watch src/main.ts",
    "test:dev": "env-cmd -f .env.dev bun test --watch --timeout 20000",
    "test:staging": "env-cmd -f .env.staging bun test --watch --timeout 20000",
    "lint": "bun eslint ./src --ext .ts",
    "lint:fix": "bun eslint ./src --ext .ts --fix"
  },
  "dependencies": {
    "env-cmd": "^10.1.0",
    "eslint-config-prettier": "^9.1.0",
    "fastify": "^4.26.2",
    "pino": "^8.19.0",
    "pino-pretty": "^10.3.1",
    "prettier": "^3.2.5"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "eslint": "^8.57.0"
  }
}
